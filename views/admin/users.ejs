<!DOCTYPE html>
<html>
<head>
    <title>User Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark px-4">
        <a class="navbar-brand" href="/admin/dashboard">FOCODE CMS</a>
        <div>
            <a href="/admin/dashboard" class="btn btn-sm btn-outline-light me-2">Back to Dashboard</a>
            <a href="/admin/logout" class="btn btn-sm btn-danger">Logout</a>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white fw-bold">Current Team</div>
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Joined</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(u => { %>
                            <tr>
                                <td><%= u.name %></td>
                                <td><%= u.email %></td>
                                <td>
                                    <% if(u.role === 'ADMIN') { %>
                                        <span class="badge bg-danger">ADMIN</span>
                                    <% } else { %>
                                        <span class="badge bg-primary">EDITOR</span>
                                    <% } %>
                                </td>
                                <td class="text-muted small"><%= new Date(u.createdAt).toLocaleDateString() %></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white fw-bold">Add New User</div>
                    <div class="card-body">
                        <form action="/admin/users/create" method="POST">
                            <div class="mb-3">
                                <label class="form-label">Full Name</label>
                                <input type="text" name="name" class="form-control" placeholder="Ex: Gordien N." required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" name="email" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <input type="password" name="password" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Role</label>
                                <select name="role" class="form-select">
                                    <option value="EDITOR">Editor (Can write/edit articles)</option>
                                    <option value="ADMIN">Admin (Can manage users)</option>
                                </select>
                            </div>
                            <button class="btn btn-dark w-100">Create Account</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
