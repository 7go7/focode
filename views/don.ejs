        // 1. Toggle Frequency
        function setFrequency(freq) {
            document.querySelectorAll('.freq-tab').forEach(el => el.classList.remove('active'));
            if(freq === 'monthly') {
                document.getElementById('tab-monthly').classList.add('active');
                document.querySelector('.submit-donation').innerText = "JE M'ENGAGE MENSUELLEMENT";
            } else {
                document.getElementById('tab-once').classList.add('active');
                document.querySelector('.submit-donation').innerText = "FAIRE UN DON UNIQUE";
            }
        }

        // 2. Select Tier (Clicking Buttons)
        function selectTier(tierName, amount) {
            // Remove 'selected' from all buttons
            document.querySelectorAll('.amount-btn').forEach(btn => btn.classList.remove('selected'));
            // Add 'selected' to the clicked button
            event.target.classList.add('selected');
            
            // Hide custom input if open
            document.getElementById('custom-wrap').style.display = 'none';

            // Update the visual card
            updateCard(tierName);
        }

        // 3. Toggle Custom Input
        function toggleCustom() {
            const wrap = document.getElementById('custom-wrap');
            // Remove selection from buttons
            document.querySelectorAll('.amount-btn').forEach(btn => btn.classList.remove('selected'));
            wrap.style.display = 'block';
        }

        // 4. Check Tier based on custom input
        function checkTier(amount) {
            amount = parseInt(amount);
            let t = 'sentinelle'; // Default
            
            if (!amount || amount < 10) t = 'sentinelle';
            else if (amount >= 10 && amount < 50) t = 'eclaireur';
            else if (amount >= 50 && amount < 100) t = 'batisseur';
            else if (amount >= 100 && amount < 500) t = 'gardien';
            else if (amount >= 500) t = 'flambeau';
            
            updateCard(t);
        }

        // 5. Update the Card UI (Animation logic)
        function updateCard(tierName) {
            const card = document.getElementById('identity-card');
            const data = tiers[tierName];

            // Fade out
            card.style.opacity = '0.5';
            card.style.transform = 'translateY(5px)';
            
            setTimeout(() => {
                // Update Text
                document.querySelector('.id-icon').innerText = data.icon;
                document.getElementById('tier-title').innerText = data.title;
                document.getElementById('tier-desc').innerText = data.desc;
                
                // Update Color Class (remove old tier classes)
                card.className = 'identity-box tier-' + tierName;
                
                // Fade in
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 150);
        }
    </script>
